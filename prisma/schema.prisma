generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  
  // JOB TRACKING FIELDS
  status       String    @default("PENDING") // PENDING, ASSIGNED, IN_PROGRESS, RESOLVED
  
  // Assignment Relation
  technicianId String?   
  technician   User?     @relation("TechJobs", fields: [technicianId], references: [id])
  
  // Workflow Fields
  latitude     Float?
  longitude    Float?
  startCode    String?   // Secure 4-digit code to START
  endCode      String?   // Secure 4-digit code to FINISH (New)
  startedAt    DateTime?
  completedAt  DateTime?
}

model ArrivalConfirmation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  workOrder String
  code      String
  latitude  Float?
  longitude Float?
  status    String   @default("CONFIRMED")
}

enum Role {
  ADMIN
  TECHNICIAN
  CLIENT
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(CLIENT)
  password      String?

  accounts      Account[]
  sessions      Session[]
  
  // Relation to jobs assigned to this user (if they are a technician)
  assignedJobs  Inquiry[] @relation("TechJobs")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Token for Email Verification & Magic Links
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Token for Password Resets
model PasswordResetToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
